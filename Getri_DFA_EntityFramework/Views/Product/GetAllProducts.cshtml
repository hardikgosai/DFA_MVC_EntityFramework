@model IEnumerable<Getri_DFA_EntityFramework.Models.Product>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1>Products</h1>
        </div>

    <div class="Panel-body">
        <div class="btn-group">
            <a id="createProductModal" asp-action="Create" class="btn btn-primary">Add Product</a>
        </div>
    </div>
    <br/><br/>
<table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Description</th>       
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@Html.DisplayFor(modelItem =>@item.Name)</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>                    
                    <td>
                        <a id="editProductModal" asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a id="detailsProductModal" asp-action="ProductDetails" asp-route-id="@item.Id" class="btn btn-success">Detail</a>
                        <a id="deleteProductModal" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                       
                    </td>
                </tr>
            }
        </tbody>
</table>
</div>